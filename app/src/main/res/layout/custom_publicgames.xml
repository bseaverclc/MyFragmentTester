<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center"

        >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="30"

        >
        <TextView
            android:id="@+id/publicGameRedTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red Team"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    vs"/>
        <TextView
            android:id="@+id/publicGameBlueTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue Team"/>
    </LinearLayout>

      <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="50"

          >

          <LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="100"

              >

              <TextView
                  android:id="@+id/redSet1"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/redSet2"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="0"
                  android:layout_weight="20"
                  android:layout_gravity="center"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/redSet3"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/redSet4"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/redSet5"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
          </LinearLayout>
          <LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/blankRow"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text=""
                  />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/blueSetsRow"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="100"
              >

              <TextView
                  android:id="@+id/blueSet1"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/blueSet2"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="0"
                  android:layout_weight="20"
                  android:layout_gravity="center"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/blueSet3"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/blueSet4"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
              <TextView
                  android:id="@+id/blueSet5"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="20"
                  android:text="0"
                  android:textAlignment="center"
                  />
          </LinearLayout>

      </LinearLayout>

<TextView
    android:id="@+id/publicDate"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Date"
    android:layout_gravity="center_vertical"
    android:textAlignment="center"
    android:layout_weight="20"


    />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>