<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointHistoryFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        >

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:id="@+id/titlelayout"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:weightSum="100"
       android:gravity="bottom"
       android:layout_weight="5"
       >

    <TextView
        android:id="@+id/redTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Red Team"
        android:gravity="center"
        android:layout_weight="30"
        android:textStyle="bold"
        />
       <TextView
           android:id="@+id/redRotateTitle"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="R"
           android:gravity="center"
           android:layout_weight="10"
           android:textStyle="bold"

           />
       <TextView
           android:id="@+id/setTitle"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="Set #"
           android:gravity="center"
           android:layout_weight="20"
           android:textStyle="bold"

           />
       <TextView
           android:id="@+id/blueRotateTitle"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="R"
           android:gravity="center"
           android:layout_weight="10"
           android:textStyle="bold"

           />
       <TextView
           android:id="@+id/blueTeam"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="blue Team"
           android:gravity="center"
           android:layout_weight="30"
           android:textStyle="bold"
           />
   </LinearLayout>


        <ListView
            android:id="@+id/pointlistview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"

            />

        <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:text="Rotation Net Totals"
    android:gravity="center"
    android:layout_weight="5"

    />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="10"
           android:orientation="vertical"
           android:gravity="center"

           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight=".33"
               android:orientation="horizontal"
               android:weightSum="100">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="34"
                   android:text="Rotation #"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="1"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="2"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="3"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="4"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="5"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="6"
                   android:gravity="center"/>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/redTeamRotationRow"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight=".33"
               android:orientation="horizontal"
               android:weightSum="100">
               <TextView
                   android:id="@+id/redTeamRotationName"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="34"
                   android:text="Red Team"/>
               <TextView
                   android:id="@+id/redRotation1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/redRotation2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/redRotation3"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/redRotation4"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/redRotation5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/redRotation6"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/blueTeamRotationRow"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight=".33"
               android:orientation="horizontal"
               android:weightSum="100">
               <TextView
                   android:id="@+id/blueTeamRotationName"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="34"
                   android:text="Blue Team"/>
               <TextView
                   android:id="@+id/blueRotation1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/blueRotation2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/blueRotation3"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/blueRotation4"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/blueRotation5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>
               <TextView
                   android:id="@+id/blueRotation6"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="11"
                   android:text="0"
                   android:gravity="center"/>

           </LinearLayout>


       </LinearLayout>

    </LinearLayout>

</RelativeLayout>